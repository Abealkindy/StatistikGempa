<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/carditemprovinsi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/desc_padding"
        android:layout_marginTop="@dimen/jarak10dp"
        app:cardCornerRadius="@dimen/jarak5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textnamaprovinsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dots_margin_bottom"
                android:layout_marginTop="@dimen/jarak10dp"
                android:textSize="@dimen/jarak20sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>